:80 {
  root * /usr/share/caddy
  encode zstd gzip
  @nocache path / /index.html /assets/configs/config.json
  header @nocache Cache-Control "no-cache, no-store, must-revalidate"

  @other not path / /index.html /assets/configs/config.json

  header @other Cache-Control "public, max-age=31536000, immutable"

  try_files {path} /
  file_server
}
